<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= title %></title>
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    </head>
    <body class="bg-gray-50 min-h-screen">
        <!-- Navigation -->
        <nav class="bg-blue-600 shadow-lg">
            <div class="max-w-7xl mx-auto px-4">
                <div class="flex justify-between items-center py-4">
                    <a href="/" class="text-white text-xl font-bold">Task Manager</a>
                    <div class="space-x-4">
                        <a href="/" class="text-blue-100 hover:text-white transition">Home</a>
                        <a href="/tasks" class="text-white font-semibold">Tasks</a>
                        <a href="/tasks/new" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded transition">New Task</a>
                    </div>
                </div>
            </div>
        </nav>

        <div class="max-w-7xl mx-auto px-4 py-8">
            <!-- Header -->
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-4xl font-bold text-gray-900">All Tasks</h1>
                <a href="/tasks/new" class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-semibold transition shadow-md">
                    + New Task
                </a>
            </div>

            <% if (tasks.length === 0) { %>
                <!-- Empty State -->
                <div class="text-center py-16">
                    <div class="mb-8">
                        <svg class="mx-auto h-24 w-24 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-semibold text-gray-900 mb-4">No tasks yet!</h3>
                    <p class="text-gray-600 mb-8 max-w-md mx-auto">
                        You haven't created any tasks yet. Get started by creating your first task and stay organized.
                    </p>
                    <a href="/tasks/new" class="bg-blue-500 hover:bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold transition shadow-md">
                        Create First Task
                    </a>
                </div>
            <% } else { %>
                <!-- Tasks Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% tasks.forEach(task => { %>
                        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow border <%= task.completed ? 'border-green-200' : 'border-gray-200' %>">
                            <div class="p-6">
                                <!-- Task Header -->
                                <div class="flex justify-between items-start mb-4">
                                    <h3 class="text-xl font-semibold <%= task.completed ? 'text-gray-500 line-through' : 'text-gray-900' %> truncate">
                                        <%= task.title %>
                                    </h3>
                                    <% if (task.completed) { %>
                                        <span class="bg-green-100 text-green-800 text-xs font-semibold px-2.5 py-0.5 rounded-full flex-shrink-0 ml-2">
                                            Completed
                                        </span>
                                    <% } else { %>
                                        <span class="bg-yellow-100 text-yellow-800 text-xs font-semibold px-2.5 py-0.5 rounded-full flex-shrink-0 ml-2">
                                            Pending
                                        </span>
                                    <% } %>
                                </div>

                                <!-- Task Description -->
                                <p class="text-gray-600 mb-6 <%= task.completed ? 'line-through' : '' %>">
                                    <%= task.description || 'No description provided' %>
                                </p>

                                <!-- Action Buttons -->
                                <div class="flex gap-2">
                                    <a href="/tasks/<%= task.id %>" 
                                       class="flex-1 text-center bg-blue-500 hover:bg-blue-600 text-white px-3 py-2 rounded text-sm font-medium transition">
                                        View
                                    </a>
                                    <a href="/tasks/<%= task.id %>/edit" 
                                       class="flex-1 text-center bg-gray-500 hover:bg-gray-600 text-white px-3 py-2 rounded text-sm font-medium transition">
                                        Edit
                                    </a>
                                    <form method="POST" action="/tasks/<%= task.id %>?_method=DELETE" class="flex-1">
                                        <button type="submit" 
                                                class="w-full bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded text-sm font-medium transition"
                                                onclick="return confirm('Are you sure you want to delete this task?')">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <!-- Tasks Summary -->
                <div class="mt-12 bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Summary</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
                        <div class="bg-blue-50 p-4 rounded-lg">
                            <div class="text-2xl font-bold text-blue-600"><%= tasks.length %></div>
                            <div class="text-sm text-blue-600">Total Tasks</div>
                        </div>
                        <div class="bg-green-50 p-4 rounded-lg">
                            <div class="text-2xl font-bold text-green-600"><%= tasks.filter(t => t.completed).length %></div>
                            <div class="text-sm text-green-600">Completed</div>
                        </div>
                        <div class="bg-yellow-50 p-4 rounded-lg">
                            <div class="text-2xl font-bold text-yellow-600"><%= tasks.filter(t => !t.completed).length %></div>
                            <div class="text-sm text-yellow-600">Pending</div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </body>
</html>